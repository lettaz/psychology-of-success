<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#990000"
    android:orientation="vertical"
    tools:context=".introduction">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="BRIDGING THE GAP"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="I was opportune to be in a master class with sir Mundus Madukwe. I got to understand a thing, The greatest difference between the unsuccessful and the successful are these short phrases."
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="I WILL &#xD;
 I WANT TO &#xD;
 I KNOW IT &#xD;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="When you keep WILLING TO and you don't DO IT, When you keep WANTING TO and you don't DO IT, and finally, worst of all is KNOWING but you don't DO IT."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Knowledge is futile without action, also action is futile without knowledge."
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="A great speaker once said,&quot;The greatest place or richest surrounding is the graveyard,because there you have great and mighty ideas that were not actualized.&quot; "
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="I discovered that the problem faced by many is not the knowledge,it's the implication."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Let me use a case study, DIGITAL MARKETING."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Looking at Nigeria, with the increasing number of lucrativity amongst the youths. This particular course increases in students, many has taken a course in it in one way or the other."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="But how have they implemented it in what they are doing."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="During the master class, there was a quick reflection down his story line. I saw someone who has not only learned but has turned his I KNOW to I HAVE DONE. The truth is that you might have knowledge about something but still don't know how to do it."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Let me give you an example, after taking my first digital marketing course, i was proficient in social media marketing, but as a digital marketer i am to touch all areas, Although i had knowledge about search engine marketing, but i had not practicalized it for once, i had not done any practise of such. So when i had my first job, i failed. Why? Because i felt i knew it, meanwhile i realized its not about knowing its about practocalizing and be able to tell its effectiveness."
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="You do not have to be big to start-up, It only takes a wise,knowledgeable and active personality to think and act successful."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="For this chapter, i would be outlining with explanation from my collective findings from masterclasses 10 steps to turn that knowledge or idea to start up;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="It is never easy to change things about a person or yourself,but it is a gradual process."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="A great startup begins with an idea, but it has to be put into practice. Here are 10 steps to get you started on your startup journey."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Everyone has at least one idea for the next big thing. What makes startup founders different is their willingness to take action to make one of those ideas a reality."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="If you're thinking you may want to leave your day job and set out as a founder, it might be helpful to reflect and make a plan but, once you've made up your mind, you need to go — and quick."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="A big part of execution is simply getting started, but once you've got the ball rolling it's helpful to have a checklist of steps to follow to make sure everything."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="1. Do your Market Research"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Directing marketing research is the initial step to decide whether you truly do have an idea worth seeking after. Start your exploration by recording what you think the issue is that your business idea would comprehend. Physically record it and keep it before you."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Make sense of what number of individuals are having this issue you're explaining and go converse with them. Think about reviewing a study for these potential &quot;clients&quot; to take and see what they need to state. After you get your outcomes, look at the opposition and make sense of in the event that you are sufficiently diverse (positively) to do fight with them."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Keep the majority of your examination materials when you are done, as they could be useful in anchoring financing later on."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="2. Secure Intellectual Property."
                android:textColor="#000000"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Intellectual property (IP) refers to the process by which an individual or company can own the rights to a created product. Examples include patents, copyright, and trademarks. It is vital to the success of your company that you follow the proper protocol to protect your differentiating factor."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="By securing your IP early on, you'll protect yourself against copycats. Conversely, make sure you're not the copycat, even inadvertently. Confirm that you aren't violating any existing IP rights or non-compete agreements, otherwise, you could face serious legal ramifications. Once you know you're in the clear, file your patent or apply for your trademark or copyright."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Pro tip: Once you have command of the IP, transfer it to the ownership of the company once it is incorporated."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="3. Decide on branding"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Branding is about something other than picking a name, it's tied in with settling on a personality for your idea. You need to pick something you adore, however you likewise need to pick a name that passes on the experience of utilizing your product and the issue that it unravels."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Know about any current product triumphs, or disappointments, that are related with the name you pick and how they may affect reception. This is the time you ought to likewise anchor your site space name and other related promoting materials. This is additionally where you make and disguise your lift pitch, so you know precisely what to state to any individual who may ask what your organization does."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="They sense where the team is going"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="4. Incorporate"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Incorporating is a big deal for a startup because there are so many aspects of the startup lifecycle that affect it, and are affected by it. Incorporating is the process of turning your business into a legal entity and deciding how it will be structured. Typically, startups will be incorporated as an LLC, a C corporation, or an S corporation. Both LLCs and S corporations have special tax exemptions, while a C corporation is considered a taxable entity."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="In addition to the tax differences, there are a host of other considerations that you need to make when incorporating. For example, equity compensation, which is a major issue when raising capital, is different depending on the business structure you choose. Additionally, you'll want to consider where to incorporate, as different states have different ways of taxing businesses."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="One of the de facto standards is to incorporate as a Delaware-based Corporation because Delaware is considered by many to have favorable corporate law practices, and because C corporations tend to be looked upon more favorably by venture capital investors."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="5. Co-founder."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Not having the proper support for even the best of ideas can kill your execution. In fact, some investors look at the founding team first before looking at the idea when considering making an investment. If you have a co-founder already — awesome. If not, you should consider bringing someone else into the fold."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Look for someone with solid track record who you have, at least, some history with. The key feature is finding someone with a skill set that is complementary to yours. Style and personality are also considerations to make, as you will be working alongside this person every day and need to know that you can accomplish goals as a team. Also, there might only be room for one person in the spotlight, so understand that one of you might be working behind the scenes and will need to be ok with that."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="6. Have a good Business plan"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="One way to set your startup off on the right path is to write a good business plan. Using the market research you did earlier, create your plan of attack and decide what you want to accomplish with your new business. Determine goals and milestones, and what steps you need to make it to those milestones."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="7. Get a Work space"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Where you work actually does have an effect on your startup as you're getting off the ground. Different environments will suit different working styles best. Many founders choose to work from home initially to save money, but others choose to rent at a coworking space, share an office, or rent and office for themselves. Don't be afraid to experiment, but don't let the search for the perfect space get in the way of your work."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="8. Find a mentor."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Mentorship is a touchy subject. First, you should determine if having a mentor is good for you as a founder. If so, finding the right mentor can make a huge difference. Even with the combined expertise of you and your co-founder, a mentor can provide deep industry insight and wisdom to help you navigate some of the challenges that come your way. Your mentor doesn't necessarily mean he or she should be older than you, I he just have to be more success driven than you."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="9. Apply for an accelerator program:"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="If you need some additional resources and expertise, consider applying for an accelerator. An accelerator is a program for startup businesses that helps speed the growth of the company by providing a mentor network and sometimes a small investment. These programs can also give their companies the opportunity to formally pitch the media and other members of the startup community during a demonstration day at the end of the program. Bear in mind, however, that most of these programs require equity share of your company."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="10. Raise capital"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="For many startups, taking it to the next level requires a financial investment in the company. Founders give equity in their company to angel investors or venture capital investors in return for money and, sometimes, advice. The resources can be an enormous help, but taking capital investments does have a dark side that should be understood before you move forward."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="If you need to raise capital for your business, you should begin by deciding how much money to raise and how it will affect your startup. Once you have that figured out, you should decide how you'll be raising it — by crowdfunding, from an angel investor, or through a traditional VC firm. Then, you need to practice your pitch."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="This list is not exhaustive, and the complete set of steps you'll take will likely be determined by your individual situation. However, these steps should help get you started and on your way to a public launch."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="John c. Maxwell in his book HOW SUCCESSFUL PEOPLE THINK said;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="&quot;Ideas have a short shelf life. You must act on them before the expiration date.&quot;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="World War I flying ace EDDIE RICKENBAKER said it all when he remarked, “I can give you a six-word formula for success: Think things through then follow through.”"
                android:textColor="#000000"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>