<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#990000"
    android:orientation="vertical"
    tools:context=".introduction">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="PRIORITY MANAGEMENT"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="What is time?"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Time is resource, limited, money and its irreplaceable. Time is a measure of the interval between two events that could be material or immaterial. If we look at the most valuable currency on this planet, then our first thought sways towards dollars, dinars, pounds etc, or in some cases the crypto-currency called Bitcoin but Time as Most Valuable Currency"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="TIME is the most valuable currency in this world where 1 second lost cannot be bought back by the most valuable or powerful currencies available in this materialistic world."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Everyone has an equal number of hours per week to become unequal, be it local tea stall owner, shopkeeper or someone as big as Dangote, emeka offor, otedola etc."
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Time is classified in two;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="1. Clock time"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="2. Real time."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="With effective time management, clock time is not as relevant as real time. All of us reside in real time where once time passes, you cannot get it back. For you, the good news is that real time is more mental to physical or clock time. You are the one that creates it in your mind. "
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="A successful man deals with real time, real time here is the representation of what's happening."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="It is only the unwise that would lay more emphasis on clock time. Time can be said to be a myth, it can't be replaced, and it doesn't end."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Because it can't be controlled, therefore it can't be managed, but rather things could be managed in respect to it"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="&quot;Time management is an oxymoron. Time is beyond our control, and the clock keeps ticking regardless of how we lead our lives. Priority management is the answer to maximizing the time we have.&quot;John C Maxwell"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Successful people manage their priority with respect to time."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="If you're a knowledge worker, you're probably undervaluing your time. If you waste a lot of time doing administrative things, creating your own systems and hacking excel, Google docs, and the like, you're probably not making the most of your time. There's also likely rudimentary tasks that you should be outsourcing to save you time, whether it be asking someone else to help you, hiring a Task Rabbit, or using a 3rd party tool or service."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="There is always more to be done as a manager. You may have a To Do list with a lot of items crossed off, but did you accomplish the most important things today?  Especially when others depend on you, you have to learn to make tough choices on what to do, what to put off, and what to say no to. That�s where priority management comes in.  Use these concepts to help you prioritize your work and get the right things done."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="How to Use Priority Management to Value Your Time"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Apply the Pareto Principle (aka- the 80/20 rule)"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="One of the more oft-quoted concepts, the Pareto Principle, applies to both people and tasks: &quot;roughly 80% of the effects come from 20% of the causes.&quot;  With a little effort, you can find what work is having the deepest impact and the things you might even be able to stop doing. "
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Small-business owners waste their time on what I call N1000 an hour work, like running to get office supplies. Meanwhile, they forgo the activities that earn N10,000 an hour, such as sending the right email to the right person, or negotiating a lucrative contract, or convincing a client to do more business with you."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Entrepreneurs are extremely prone to rationalize, &quot;I can do it myself.&quot; Then they spend six hours trying to extract a virus from our computer or fix a leaky faucet."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Sure, we may be competent to do that little job. And sure, sometimes you have to do everything when you start out. But now you're doing a N100 or N200 per hour fix-the-faucet job and you're not doing your No. 1 job, which is getting and keeping customers. That job pays N1000 to N10,000 per hour."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Think about the work you're doing. Can you be doing more of the things that would have a higher impact? (ie- the 20%) Also consider your people. Who on your team is delivering exceptional output and value? Ensure you're investing in their success as the Pareto Principle teaches us that you'll see the greatest impact on your overall results with them. The less you and your team waste time on the wrong activities, the more you'll accomplish that matters.&#xD;
&quot;DO FEWER N100 naira per hour task and do more of N1000 per hour task.&quot; This means avoiding being bogged down by too many admin tasks, filing things, building your own framework in excel when an app could do it out of the box, or avoiding delegating work when you should. And those N1000/hr tasks are those high-skill tasks that really add value, whether that be investing in relationships with clients, exploring new business opportunities, or spending more time on a consultation's complex problems."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="PRIORITY MANAGEMENT WITH RESPECT TO TIME."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="When purpose is not known, sleeping becomes interesting. - &quot;LINUS OKERIE&quot; &#xD;
Your purpose determines your priority and your priority determines how you will allocate your time."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Who are you?,&#xD;
What can you do?,&#xD;
Who are you doing it for?,&#xD;
Their benefit and how will they change?,&#xD;
These questions helps you figure out time-purpose relationship, It gives purpose when you can comfortably answer this questions, answering these questions give you purpose for your life."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="How will you manage priority?"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="We live in a time pressured world, where it is common to multiple overlapping commitments that all require immediate attention now.&#xD;
I would give you a grid that shows what things are to be given priorities according to Stephen Covey."
                android:textColor="#000000"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/quadrant"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Quadrant 1: It is for immediate task and important deadlines"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Quadrant 2: It is for long-term strategizing and development"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Quadrant 3: It is for time pressured distractions. They are not really important but someone wants it now."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Quadrant 4: It is for those activities that yield little or less value. These are activities that are often used for taking break from time pressured and important activities."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="You should be able to set your priority right, know the difference between urgent and important, something's are urgent both not important, some are important but not urgent, while some are either of them or neither of them."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="2. Commit"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="According to time management, You are too create a to-do list, but a To do list is like a list of wishes, but a priority figured out and time allocated to it...then you commit."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Example."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="I want to read for two hours brings commitment compared to i want to read."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="3. DISTRACTION: Know your distractions, that which you do for pleasure is always interesting or becomes interesting when you have not define purpose."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="4. BREAKING OLD HABITS:Pay attention to breaking up old habits, like the use of tools in suppose of time managing."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="5. MEASURE YOUR RESULTS"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="6. DEAL WITH YOURSELF in;"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="-Procrastination."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="-Learn To Say NO."
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="7. Make time to REST."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>